                            <div class="form-group">
                                @if ((MilitaryServiceStatus)Model.MilitaryServiceStatus != MilitaryServiceStatus.TheEndOfService)
                                {
                                    <label asp-for="ExemptionCode"></label>
                                    <label>:@Model.ExemptionCode</label>
                                }

                            </div>
                        </div>
                    </div>
                    <div class="row text-right">
                        <div class="col-xs-4">
                            @if ((MilitaryServiceStatus)Model.MilitaryServiceStatus == MilitaryServiceStatus.TheEndOfService)
