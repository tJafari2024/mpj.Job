                                    <label>:@Model.PlaceOfServiceOrgan</label>
                                }
                                else
                                {
                                    <label asp-for="ExemptionReason"></label>
                                    <label>:@Model.ExemptionReason</label>


                                }

                            </div>
                        </div>
