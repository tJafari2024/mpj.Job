@using Mpj.DataLayer.DTOs.EmploymentForm
@model Mpj.DataLayer.DTOs.EmploymentForm.AuthenticationDTO
@{
    var modelStep = new ModelStepDTO() { Step = 2 };
}
@section styles
{

    <style>
        .tab-content > .tab-pane {
            display: block !important;
        }


        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css" >
    </style>
}

<partial name="_WizardStep" model="@modelStep" />
<div class="col-lg-12 col-sm-12 col-xs-12">
    <div class="widget">
        <div class="widget-header bordered-bottom bordered-lightred">
            <span class="widget-caption">
                <h4 class="h5 mt10 text-danger ">احراز هویت</h4>
            </span>
        </div>
        <div class="widget-body">
            <form role="form" asp-area="" asp-controller="Home" asp-action="AddAuthentication" method="post" class="login-box">
                <div class="tab-pane" role="tabpanel" id="step2">
                    <div class="row justify-content-center">
                        <div class="col-lg-6 col-sm-6 col-xs-12">
                            <div class="widget flat radius-bordered">
                                <div class="widget-header bg-danger w-header">
                                    <span class="widget-caption font-size-19">سامانه جذب و استخدام گروه صنایع جهان آرا</span>

                                </div>
                                <div class="widget-body bg-custom-gray">
                                    <div id="registration-form">
                                        <div class="form-group">
                                            <label asp-for="NationCode" class="required colored-black" for="fNationCode"></label>
                                            <span class="input-icon icon-right">

                                                <i class="fa fa-user circular"></i>
                                                <input type="text" asp-for="NationCode" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" class="form-control" id="fNationCode">

                                            </span>
                                            <span class="text-danger" asp-validation-for="NationCode"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Mobile" class="required colored-black" for="fmobile"></label>
                                            <span class="input-icon icon-right">
                                                <input type="text" class="form-control" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" asp-for="Mobile" id="fmobile">
                                                <i class="fa fa-phone circular"></i>
                                            </span>
                                            <span class="text-danger" asp-validation-for="Mobile"></span>
                                        </div>

                                       
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <ul class="list-inline CenterItem">
                       
                        <li><button type="submit" class="btn btn-danger next-step">ثبت نام / ورود</button></li>


                    </ul>
                </div>

            </form>
        </div>
    </div>
</div>

@section scripts
{
    @{
        await Html.RenderPartialAsync("_JqueryValidators");
    }
}

